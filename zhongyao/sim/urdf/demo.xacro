    <gazebo reference="base_link">
        <material>Gazebo/Orange</material>
    </gazebo>

    <gazebo reference="wheel1">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="wheel2">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="wheel3">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="wheel4">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- <gazebo reference="imu">
        <material>Gazebo/Orange</material>
    </gazebo> -->

    <gazebo>
        <plugin name="mecanum_controller" filename="libgazebo_ros_planar_move.so">
            <ros>
                <!-- <namespace>/demo</namespace> -->
                <remapping>cmd_vel:=cmd_vel</remapping>
                <remapping>odom:=odom</remapping>
            </ros>

            <update_rate>100</update_rate>
            <publish_rate>100</publish_rate>

            <publish_odom>false</publish_odom>
            <publish_odom_tf>false</publish_odom_tf>

            <leftFrontJoint>w1_b</leftFrontJoint>
            <rightFrontJoint>w2_b</rightFrontJoint>
            <leftRearJoint>w3_b</leftRearJoint>
            <rightRearJoint>w4_b</rightRearJoint>
            <wheelSeparation>0.14</wheelSeparation>
            <wheelDiameter>0.1</wheelDiameter>
        </plugin>
    </gazebo>

