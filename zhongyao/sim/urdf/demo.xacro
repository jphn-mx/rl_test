    <joint name="w1_b" type="continuous">
        <origin xyz="0.1 0.07 -0.05" rpy="${PI/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel1"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <joint name="w2_b" type="continuous">
        <origin xyz="0.1 -0.07 -0.05" rpy="${PI/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel2"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <joint name="w3_b" type="continuous">
        <origin xyz="-0.1 0.07 -0.05" rpy="${PI/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel3"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <joint name="w4_b" type="continuous">
        <origin xyz="-0.1 -0.07 -0.05" rpy="${PI/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel4"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <joint name="bl_bf" type="fixed">
        <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
    </joint>

