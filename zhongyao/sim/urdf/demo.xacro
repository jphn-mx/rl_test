    <link name="laser">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry >
            <box size="0.03 0.03 0.03" />
        </geometry>
        </visual>
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry >
            <box size="0.03 0.03 0.03" />
        </geometry>
        </collision>   
        <inertial>
            <mass value="0.001"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial> 
    </link>

    <joint name="laser_joint" type="fixed">
        <origin xyz="0 0 0.0515" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="laser"/>
    </joint>

    <gazebo reference="laser">
        <sensor type="ray" name="rplidar">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <update_rate>10</update_rate>
        <ray>
            <scan>
            <horizontal>
                <samples>360</samples>
                <resolution>1</resolution>
                <min_angle>-3</min_angle>
                <max_angle>3</max_angle>
            </horizontal>
            </scan>
            <range>
            <min>0.10</min>
            <max>30.0</max>
            <resolution>0.01</resolution>
            </range>
            <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
            </noise>
        </ray>
        <plugin name="gazebo_rplidar" filename="libgazebo_ros_laser.so">
            <topicName>/scan</topicName>
            <frameName>laser</frameName>
        </plugin>
        </sensor>
    </gazebo>

    <xacro:include filename="$(find livox_laser_simulation)/urdf/livox_mid360.xacro"/>

    <joint name="livox_base2base_footprint" type="fixed">
        <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0"/>
        <parent link="base_footprint"/>
        <child link="laser_livox"/>
    </joint>

    <joint name="avia2fp" type="fixed">
        <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0"/>
        <parent link="base_footprint"/>
        <child link="livox_base"/>
    </joint>

</robot>