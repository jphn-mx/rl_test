<gazebo>
  <plugin name="mecanum_controller" filename="libgazebo_ros_planar_move.so">
    <ros>
      <!-- <namespace>/demo</namespace> -->
      <remapping>cmd_vel:=cmd_vel</remapping>
      <!-- 确保没有 remapping odom 话题 -->
    </ros>

    <update_rate>100</update_rate>
    <publish_rate>100</publish_rate>

    <publish_odom>false</publish_odom>
    <publish_odom_tf>false</publish_odom_tf>

    <!-- 添加明确的参数配置 -->
    <commandTopic>cmd_vel</commandTopic>
    <odometryTopic></odometryTopic> <!-- 设置为空以禁用 odom 话题 -->
    <odometryFrame></odometryFrame> <!-- 禁用 odometryFrame -->
    <robotBaseFrame>base_footprint</robotBaseFrame>
    <odometryRate>0.0</odometryRate> <!-- 设置为 0 禁止发布 -->
    <cmdTimeout>1.0</cmdTimeout>

    <leftFrontJoint>base_to_wheel1</leftFrontJoint>
    <rightFrontJoint>base_to_wheel3</rightFrontJoint>
    <leftRearJoint>base_to_wheel2</leftRearJoint>
    <rightRearJoint>base_to_wheel4</rightRearJoint>
    <wheelSeparation>0.26</wheelSeparation>
    <wheelDiameter>0.12</wheelDiameter>
  </plugin>
</gazebo>


